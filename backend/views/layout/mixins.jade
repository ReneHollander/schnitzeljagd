mixin error(title, errortext, error)
    .callout.callout-danger
        h4 #{title}
        if error.length == 1
            p An error occured while #{errortext}:
        else
            p #{error.length} errors occured while #{errortext}:
        ul
            each err in error
                li= err

mixin success(title, msg)
    .callout.callout-success
        h4 #{title}
        p #{msg}

mixin printJSON(data)
    pre #{JSON.stringify(data, null, 2)};

mixin textField(type, name, text)
    .form-group
        label.col-sm-2.control-label(for='#{id}') #{text}
        .col-sm-10
            input.form-control(id='#{id}', name='#{id}', type='#{type}', placeholder='#{text}')

mixin checkBox(name, text)
    .form-group
        label.col-sm-2.control-label(for='#{id}') #{text}
        .col-sm-10
            .checkbox.icheck
                input(name='#{name}', type='checkbox')
