extends base

block beforebody
    body.hold-transition.skin-blue.sidebar-mini
        .wrapper
            header.main-header#header
                a.logo(href='/')
                    span.logo-mini
                        img(src='/images/schnitzel_64x64.png', width='50px', height='50px')
                    span.logo-lg
                        img(src='/images/schnitzel_64x64.png', width='50px', height='50px', style='margin-right: 10px;')
                        b Schnitzeljagd
                nav.navbar.navbar-static-top(role='navigation')
                    a.sidebar-toggle(href='#', data-toggle='offcanvas', role='button')
                        span.sr-only Toggle navigation
                    .navbar-custom-menu
                        ul.nav.navbar-nav
                            li.dropdown.user.user-menu
                                a.dropdown-toggle(href='#', data-toggle='dropdown')
                                    img(src='#{user.profilepicture}', class="user-image", alt="User Image")
                                    span.hidden-xs #{user.username}
                                ul.dropdown-menu
                                    li.user-header
                                        img(src='#{user.profilepicture}', class="img-circle", alt="User Image")
                                        p
                                            | #{user.username}
                                            small Member since #{user.registrationDate}
                                    li.user-footer
                                        .pull-left
                                            a.btn.btn-default.btn-flat(href='/user/settings') Settings
                                        .pull-right
                                            a.btn.btn-default.btn-flat(href='/logout') Sign out
            aside.main-sidebar
                section.sidebar
                    ul.sidebar-menu
                        include nav
            .content-wrapper
                block content
            footer.main-footer#footer
                .pull-right.hidden-xs
